{
  "name": "flashcard-app",
  "version": "0.0.1",
  "private": true,
  "description": "Flashcard Language Learning App",
  "type": "module",
  "packageManager": "pnpm@10.18.3",
  "scripts": {
    "dev": "pnpm --filter @study-buddy/server dev",
    "build": "pnpm --filter @study-buddy/shared build && pnpm web:build && rm -rf server/dist && pnpm --filter=@study-buddy/server --prod deploy server/dist && cp -r web/dist server/dist/assets && cp -r server/assets server/dist && pnpm --filter=@study-buddy/server build",
    "test": "pnpm --filter @study-buddy/server test --run",
    "start": "pnpm server:start",
    "inspector": "pnpm --filter @study-buddy/server inspector",
    "server:build": "pnpm --filter @study-buddy/server build",
    "server:start": "pnpm --filter @study-buddy/server start",
    "web:build": "pnpm --filter @study-buddy/web build",
    "web:preview": "pnpm --filter @study-buddy/web preview",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint": "biome lint .",
    "check": "biome check --write .",
    "edge:prepare": "node scripts/prepare-edge-function.js",
    "edge:dev": "pnpm edge:prepare && supabase functions serve --no-verify-jwt study-buddy",
    "edge:deploy": "pnpm edge:prepare && supabase functions deploy --no-verify-jwt study-buddy"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@eslint/js": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "prettier": "^3.5.3",
    "prettier-eslint": "^16.4.2",
    "tsx": "^4.19.4",
    "typescript-eslint": "^8.32.0"
  }
}
